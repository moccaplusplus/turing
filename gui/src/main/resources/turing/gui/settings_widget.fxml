<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import turing.gui.SettingsView?>
<?import javafx.scene.control.Separator?>
<fx:root type="javafx.scene.layout.GridPane" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1"
         hgap="6" maxWidth="800" minWidth="300" vgap="6">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="70"/>
    </columnConstraints>

    <Label text="Input file" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="0">
        <center>
            <TextField fx:id="inputFileField" editable="false" focusTraversable="false"/>
        </center>
        <right>
            <Button fx:id="inputFileButton" prefWidth="120" text="Choose File"/>
        </right>
    </BorderPane>

    <Label text="Input File Charset" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="charsetField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Output Folder" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <BorderPane GridPane.columnIndex="1" GridPane.rowIndex="2">
        <center>
            <TextField fx:id="outDirField" editable="false" focusTraversable="false"/>
        </center>
        <right>
            <Button fx:id="outDirButton" prefWidth="120" text="Choose Folder"/>
        </right>
    </BorderPane>

    <Label text="Output File Name" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="outFileNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="GUI Delay Millis" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="delayField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <ButtonBar GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
        <padding>
            <Insets top="3" bottom="8"/>
        </padding>
        <buttons>
            <Button fx:id="loadButton" prefWidth="120" text="Load Settings"/>
        </buttons>
    </ButtonBar>

    <Separator GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6" />

    <SettingsView fx:id="settingsView" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="7" />

    <ButtonBar GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="8">
        <padding>
            <Insets top="3" bottom="3"/>
        </padding>
        <buttons>
            <Button fx:id="executeButton" prefWidth="120" text="Execute"/>
        </buttons>
    </ButtonBar>
</fx:root>
