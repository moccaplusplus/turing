<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import turing.gui.PreviewWidget?>
<?import turing.gui.SettingsWidget?>
<fx:root dividerPositions="0.75" orientation="VERTICAL" prefHeight="768" prefWidth="1024"
         minHeight="600" minWidth="800"
         type="javafx.scene.control.SplitPane" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
    <SplitPane dividerPositions="0.5">
        <ScrollPane fitToWidth="true">
            <VBox alignment="CENTER">
                <SettingsWidget fx:id="settingsWidget"/>
            </VBox>
        </ScrollPane>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <padding>
                <Insets topRightBottomLeft="6"/>
            </padding>
            <PreviewWidget fx:id="previewWidget"/>
        </ScrollPane>
    </SplitPane>
    <BorderPane>
        <padding>
            <Insets topRightBottomLeft="6"/>
        </padding>
        <top>
            <Label text="Output">
                <padding>
                    <Insets left="3" bottom="3"/>
                </padding>
            </Label>
        </top>
        <center>
            <TextArea fx:id="console" style="-fx-font-size: 12; -fx-font-family: monospace;" editable="false"
                      wrapText="true" focusTraversable="false"/>
        </center>
    </BorderPane>
</fx:root>
